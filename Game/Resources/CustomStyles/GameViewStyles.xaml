<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Game.Resources.CustomStyles.GameViewStyles">
    <Style
        x:Key="Button"
        TargetType="Button">
        <Setter
            Property="WidthRequest"
            Value="100" />
        <Setter
            Property="Padding"
            Value="10" />
        <Setter
            Property="Margin"
            Value="20,20,40,-5" />
        <Setter
            Property="CornerRadius"
            Value="15" />
        <Setter
            Property="FontSize"
            Value="16" />
    </Style>
    <Style
        x:Key="Label"
        TargetType="Label">

        <Setter
            Property="FontFamily"
            Value="MontserratBold" />
        <Setter
            Property="FontSize"
            Value="18" />
        <Setter
            Property="TextColor"
            Value="Black" />
    </Style>
    <Style
        x:Key="Border"
        TargetType="Border">
        <Setter
            Property="Stroke"
            Value="Black" />
        <Setter
            Property="StrokeThickness"
            Value="2" />
        <Setter
            Property="StrokeShape"
            Value="RoundRectangle 40" />
    </Style>
</ResourceDictionary>