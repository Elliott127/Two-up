<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.GamePage">
    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="WidthRequest" Value="100"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="25,10,25,10"/>
        </Style>
        <Style x:Key="ScoreLabel" TargetType="Label">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>
    </ContentPage.Resources>
    <ContentPage.MenuBarItems>
        <MenuBarItem Text="UI Changes">
            <MenuFlyoutItem Text="Dark Mode"
                            Command="{Binding SetDarkMode}"/>
        </MenuBarItem>
    </ContentPage.MenuBarItems>
    
    <VerticalStackLayout>
        <Label
            Style="{DynamicResource ScoreLabel}"
            x:Name="ScoreLabel"/>
        <Frame>
            <Image Source="Resources/dotnet_bot"/>
        </Frame>
    </VerticalStackLayout>
</ContentPage>