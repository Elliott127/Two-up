<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.GamePage">
    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="WidthRequest" Value="100"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="40,40,40,20"/>
        </Style>
        <Style x:Key="ScoreLabel" TargetType="Label">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>
        <Style x:Key="UsernameLabel" TargetType="Label">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </ContentPage.Resources>
    <ContentPage.MenuBarItems>
        <MenuBarItem Text="UI Changes">
            <MenuFlyoutItem Text="Dark Mode"
                            Command="{Binding SetDarkMode}"/>
        </MenuBarItem>
    </ContentPage.MenuBarItems>
    
    <VerticalStackLayout>
        <Label Style="{DynamicResource UsernameLabel}"
               Text="Insert Username here"/>
        <Label
            Style="{DynamicResource ScoreLabel}"
            x:Name="ScoreLabel"/>
        <Border MaximumHeightRequest="400" MaximumWidthRequest="400" Padding="20">
            <Image Source="dotnet_bot.png" MaximumHeightRequest="250" MaximumWidthRequest="250"/>
        </Border>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Button Text="Heads" Clicked="OnHeadsClicked"/>
            <Button Text="Tails" Clicked="OnTailsClicked"/>
        </HorizontalStackLayout>
        <Button Text="Toss Coin" Clicked="OnTossCoinClicked"/>
    </VerticalStackLayout>
</ContentPage>