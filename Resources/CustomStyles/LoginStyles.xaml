<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Resources.CustomStyles.LoginStyles">
    <Style
        x:Key="loginPageTitle"
        TargetType="Label">
        <Setter
            Property="HorizontalOptions"
            Value="Center" />
        <Setter
            Property="VerticalOptions"
            Value="Center" />
        <Setter
            Property="FontSize"
            Value="42" />
        <Setter
            Property="Padding"
            Value="10" />
    </Style>
    <Style
        x:Key="loginLabel"
        TargetType="Label">
        <Setter
            Property="FontSize"
            Value="18" />
        <Setter
            Property="HorizontalOptions"
            Value="Center" />
        <Setter
            Property="Padding"
            Value="10" />
        <Setter
            Property="FontAttributes"
            Value="Bold" />
    </Style>
    <Style
        TargetType="Button">
        <Setter
            Property="WidthRequest"
            Value="100" />
        <Setter
            Property="Padding"
            Value="10" />
        <Setter
            Property="FontSize"
            Value="16" />
        <Setter
            Property="Margin"
            Value="25,10,25,10" />
    </Style>
</ResourceDictionary>